# ===========================================
# SBL Infrastructure - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# DOMAINS
# ===========================================
FRONTEND_DOMAIN=sbl.example.com
API_DOMAIN=api.sbl.example.com
FRONTEND_URL=https://sbl.example.com

# ===========================================
# SSL/TLS - Let's Encrypt
# ===========================================
ACME_EMAIL=admin@example.com

# ===========================================
# DATABASE - PostgreSQL
# ===========================================
POSTGRES_USER=sbl
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=sbl

# ===========================================
# API - Symfony
# ===========================================
# Generate with: php -r "echo bin2hex(random_bytes(16));"
APP_SECRET=CHANGE_ME_RANDOM_HEX_STRING

# CORS - Adjust to match your frontend domain
CORS_ALLOW_ORIGIN=^https://sbl\.example\.com$

# JWT Configuration
# Generate keys with:
#   openssl genpkey -algorithm RSA -out private.pem -pkeyopt rsa_keygen_bits:4096
#   openssl rsa -pubout -in private.pem -out public.pem
JWT_PASSPHRASE=CHANGE_ME_JWT_PASSPHRASE

# ===========================================
# DISCORD - OAuth & Bot
# ===========================================
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://api.sbl.example.com/api/auth/discord/callback

# Bot token from Discord Developer Portal
DISCORD_TOKEN=your_discord_bot_token

# Shared secret between API and Bot for internal auth
# Generate with: openssl rand -hex 32
DISCORD_BOT_SECRET=CHANGE_ME_SHARED_SECRET
